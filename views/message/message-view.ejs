<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
<ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <%  }) %>
</ul>
<% } %>

<div class="message-view">
    <dl>
        <dt>Subject</dt>
        <dd><%- messageData.mes_subject %></dd>
        <dt>From</dt>
        <dd><%- messageData.account_firstname %> <%- messageData.account_lastname %> - <%- messageData.account_type%></dd>
    </dl>
    <pre class="message-pane"><%- messageData.mes_body %></pre>
    <div class="button-strip">
        <a href="/message/compose/<%- messageData.mes_id %>" title="Reply to this message"></a>
        <button id="readButton" title="Mark this message as read" data-id="<%- messageData.mes_id %>"></button>
        <button id="archiveButton" title="Move this message to the archive." data-id="<%- messageData.mes_id %>"></button>
        <a href="/message/view/<%- messageData.mes_id %>/delete" id="deleteButton" title="Permanently delete this message"></a>
    </div>
</div>
<br>
<div class="button-strip">
    <a href="/message" title="Return to inbox"></a>
</div>
<script src="/js/message-view.js">
</script>