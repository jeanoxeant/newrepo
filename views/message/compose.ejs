<h1><%- title %></h1>
<%- messages() %>
<% if (errors) { %>
<ul class="notice">
    <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
    <%  }) %>
</ul>
<% } %>

<form class="input-box" action="/message/send" method="post">
    <label>Recipient <br><%- recipientList %></label><br>
    <label>Subject <br><input type="text" name="mes_subject" required value="<%- locals.Subject %>"></label><br>
    <label>Message <textarea class="message-pane" name="mes_body" rows="8" required><%- locals.Body %></textarea></label>
    <input type="submit" value="SEND">
</form>